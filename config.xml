<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sharood" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Sharood</name>
    <description>
        Sharood connects people who want to eat with people who are cooking in your area. 
    </description>
    <author email="sharoodapp@gmail.com" href="https://sharoodapp.wordpress.com">
        Sharood Team
    </author>
    <content src="index.html" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="android-windowSoftInputMode" value="adjustResize" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-installLocation" value="auto" />
    <preference name="deployment-target" value="8.0" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="io.github.siegfriedbolz.cordova.plugins.email-composer" version="0.8.3" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="com.phonegap.plugin.statusbar" />
    <icon src="img/icon.png" />
    <icon gap:platform="ios" height="120" src="img/appIcon-120x120.png" width="120" />
    <icon gap:platform="ios" height="152" src="img/appIcon-152x152.png" width="152" />
    <icon gap:platform="ios" height="76" src="img/appIcon-76x76.png" width="76" />
    <icon gap:platform="ios" height="57" src="img/appIcon-57x57.png" width="57" />
    <icon src="img/icon.png" platform="android" density="ldpi" />
    <icon src="img/icon.png" platform="android" density="mdpi" />
    <icon src="img/icon.png" platform="android" density="hdpi" />
    <icon src="img/icon.png" platform="android" density="xhdpi" />
    <gap:splash gap:platform="ios" height="480" src="img/splash/screen-480x320.png" width="320" />
    <gap:splash gap:platform="ios" height="960" src="img/splash/screen-960x640.png" width="640" />
    <gap:splash gap:platform="ios" height="320" src="img/splash/screen-320x480.png" width="480" />
    <gap:splash gap:platform="ios" height="640" src="img/splash/screen-640x960.png" width="960" />
    <gap:splash gap:platform="ios" height="1024" src="img/splash/screen-1024x768.png" width="768" />
    <gap:splash gap:platform="ios" height="2008" src="img/splash/screen-2008x1536.png" width="1536" />
    <gap:splash gap:platform="ios" height="768" src="img/splash/screen-768x1024.png" width="1024" />
    <gap:splash gap:platform="ios" height="1496" src="img/splash/screen-1496x2048.png" width="2048" />
    <gap:splash gap:platform="ios" height="1136" src="img/splash/screen-1136x640.png" width="640" />
    <access origin="*" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-datepicker" spec="https://github.com/VitaliiBlagodir/cordova-plugin-datepicker.git" />
</widget>
