<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sharood" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Sharood</name>
    <description>
        Sharood connects people who want to eat with people who are cooking in your area. 
    </description>
    <author email="sharoodapp@gmail.com" href="https://sharoodapp.wordpress.com">
        Sharood Team
    </author>
    <content src="index.html" />
	
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />

	<platform name="android">
		<preference name="android-minSdkVersion" value="16" />
		<preference name="android-maxSdkVersion" value="22" />
		<preference name="android-targetSdkVersion" value="22" />
		
		<preference name="android-installLocation" value="auto" />
		<preference name="android-windowSoftInputMode" value="adjustResize" />
	</platform>
	
	<platform name="ios">
		<preference name="deployment-target" value="8.0" />
		<preference name="target-device" value="universal" />
		<preference name="ios-statusbarstyle" value="black-opaque" />	
		<preference name="prerendered-icon" value="true" />
		<preference name="exit-on-suspend" value="false" />
		<preference name="detect-data-types" value="true" />
	</platform>	
	
	<!-- to enable individual permissions use the following examples -->
    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    
    
    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="io.github.siegfriedbolz.cordova.plugins.email-composer" version="0.8.3" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="com.phonegap.plugin.statusbar" />
    <gap:plugin name="com.plugins.shortcut" />

    
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-plugin-datepicker" spec="https://github.com/VitaliiBlagodir/cordova-plugin-datepicker.git" />
	<plugin name="cordova-plugin-network-information" spec="https://github.com/apache/cordova-plugin-network-information.git" />
	
	
    <icon src="icon.png" />
    
	<platform name="android">
	    <icon src="www/img/icon.png" density="ldpi" />
	    <icon src="www/img/icon.png" density="mdpi" />
	    <icon src="www/img/icon.png" density="hdpi" />
	    <icon src="www/img/icon.png" density="xhdpi" />	
	    <splash src="www/img/logo.png"/>
	</platform>
    
    <platform name="ios">    
	    <icon src="www/img/appIcon-120x120.png" height="120" width="120" />
	    <icon src="www/img/appIcon-152x152.png" height="152" width="152" />
	    <icon src="www/img/appIcon-76x76.png" height="76" width="76" />
	    <icon src="www/img/appIcon-57x57.png" height="57" width="57" />
		<splash src="www/img/splash/screen-480x320.png" height="480" width="320" />
	    <splash src="www/img/splash/screen-960x640.png" height="960" width="640" />
	    <splash src="www/img/splash/screen-320x480.png" height="320" width="480" />
	    <splash src="www/img/splash/screen-640x960.png" height="640" width="960" />
	    <splash src="www/img/splash/screen-2008x1536.png" height="2008" width="1536" />
	    <splash src="www/img/splash/screen-768x1024.png" height="768" width="1024" />
	    <splash src="www/img/splash/screen-1496x2048.png" height="1496" width="2048" />
	    <splash src="www/img/splash/screen-1136x640.png" height="1136" width="640" />
	</platform>
    
    <access origin="*" />
    <allow-navigation href="*" />

    
	<!-- Allow images, xhrs, etc. to google.com -->
	<access origin="http://google.com" />
	<access origin="https://google.com" />
	
	<!-- Access to the subdomain maps.google.com -->
	<access origin="http://maps.google.com" />
	
	<!-- Access to all the subdomains on google.com -->
	<access origin="http://*.google.com" />
	
	<!-- Enable requests to content: URLs -->
	<access origin="content:///*" />
	
	<!-- Don't block any requests -->
	<access origin="*" />    
    
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
</widget>
